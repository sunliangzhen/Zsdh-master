<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#f5f5f5"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="@color/top">

        <ImageView
            android:id="@+id/renews_imgv"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:scaleType="fitXY"
            android:src="@drawable/ic_menu_back"/>

        <TextView
            android:id="@+id/renews_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="更改昵称"
            android:textColor="#fff"
            android:textSize="@dimen/text_title"/>

        <TextView
            android:id="@+id/renews_tv_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            android:text="提交"
            android:textColor="#fff"
            android:textSize="28px"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/renews_etxt_name"
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:layout_marginTop="30px"
        android:background="#fff"
        android:hint="你输入您的新昵称"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:textColorHint="#999999"
        android:textSize="28px"/>

    <com.toocms.dink5.mylibrary.view.AutoRadioGroup
        android:id="@+id/renews_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:background="#fff"
        android:orientation="vertical"
        android:paddingLeft="30px"
        android:paddingRight="30px">

        <RadioButton
            android:id="@+id/renews_rbtn_nan"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:button="@null"
            android:drawableRight="@drawable/selector_resex"
            android:text="先生"
            android:textSize="28px"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dbdbdb"/>

        <RadioButton
            android:id="@+id/renews_rbtn_nv"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:button="@null"
            android:drawableRight="@drawable/selector_resex"
            android:text="小姐"
            android:textSize="28px"/>
    </com.toocms.dink5.mylibrary.view.AutoRadioGroup>
</LinearLayout>
