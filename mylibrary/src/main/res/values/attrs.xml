<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--昼夜模式主色调-->
    <attr name="dayNightBackground" format="color|reference" />
    <attr name="dayNightOneTextColor" format="color|reference" />
    <attr name="dayNightTwoTextColor" format="color|reference" />
    <attr name="dayNightThreeTextColor" format="color|reference" />

    <attr name="errorColor" format="color" />
    <attr name="maxCharacters" format="integer" />

    <declare-styleable name="materialEditText">
        <!-- Highlight color of floating label text and underline. -->
        <attr name="backgroundColor" format="color" />
        <!-- Error color of under line text and underline. -->
        <attr name="errorColor" />
        <!-- Enable floating label text. -->
        <attr name="floatingLabel" format="boolean" />
        <!-- Max characters count limit. 0 means no max. -->
        <attr name="maxCharacters" />
        <!-- Icon (ImageView) associated to this EditText. -->
        <attr name="withIcon" format="reference" />
    </declare-styleable>

    <declare-styleable name="fullwidthEditText">
        <!-- Error color of under line text and underline. -->
        <attr name="errorColor" />
        <!-- Max characters count limit. 0 means no max. -->
        <attr name="maxCharacters" />
    </declare-styleable>
    <declare-styleable name="IRecyclerView">
        <attr name="refreshHeaderLayout" format="reference" />
        <attr name="loadMoreFooterLayout" format="reference" />
        <attr name="refreshEnabled" format="boolean" />
        <attr name="loadMoreEnabled" format="boolean" />
        <attr name="refreshFinalMoveOffset" format="dimension" />
    </declare-styleable>
    <declare-styleable name="HorizontalListView">
        <attr name="dividerWidth" format="dimension" />
        <attr name="android:divider" />
        <attr name="android:requiresFadingEdge" />
        <attr name="android:fadingEdgeLength" />
    </declare-styleable>

</resources>